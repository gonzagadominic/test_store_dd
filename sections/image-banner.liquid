<div class="hero-container" role="banner" aria-label="Hero section">

  {% if section.settings.image %}
  <img src="{{ section.settings.image | img_url: 'master' }}" alt="Selected image"  height="100" width="100"/>
{% else %}
  <p>No image selected</p>
{% endif %}
  <div class="content-wrapper">
    <div class="content-inner">
      <div class="highlight-text" aria-label="Company expertise">
        Shopify eCommerce experts.
      </div>
      <h1 class="main-heading">
        We design, build and
        <br />
        optimise exceptional
        <br />
        eCommerce websites.
      </h1>
      <button 
        class="cta-button" 
        aria-label="Start your project" 
        tabindex="0"
      >
        Start your project
      </button>
    </div>
  </div>
</div>

<style>
  .hero-container {
    position: relative;
    min-height: 471px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: start;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
    filter: brightness(0.5);
  }

  .content-wrapper {
    position: relative;
    display: flex;
    width: 352px;
    max-width: 100%;
    padding: 221px 80px 34px;
    flex-direction: column;
    justify-content: center;
    z-index: 2;
  }

  .content-inner {
    display: flex;
    width: 100%;
    max-width: 332px;
    flex-direction: column;
  }

  .highlight-text {
    color: #2bd896;
    letter-spacing: 1.4px;
    font-weight: 500;
  }

  .main-heading {
    color: #ffffff;
    margin: 8px 0;
    font-family: Poppins, sans-serif;
    font-size: 28px;
    line-height: 1.4;
  }

  .cta-button {
    align-self: stretch;
    border-radius: 5px;
    background-color: #c6474b;
    margin-top: 8px;
    width: 236px;
    max-width: 100%;
    padding: 15px 20px;
    color: #ffffff;
    cursor: pointer;
    border: none;
    text-transform: uppercase;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .cta-button:hover {
    background-color: #b13e42;
  }

  .cta-button:focus {
    outline: 2px solid #ffffff;
    outline-offset: 2px;
  }

  .cta-button:focus:not(:focus-visible) {
    outline: none;
  }

  @media (max-width: 991px) {
    .content-wrapper {
      padding: 100px 20px 34px;
    }
  }

  @media (max-width: 640px) {
    .content-wrapper {
      padding: 60px 20px 34px;
    }
    .main-heading {
      font-size: 24px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .cta-button {
      transition: none;
    }
  }

  @media screen and (forced-colors: active) {
    .cta-button {
      border: 2px solid currentColor;
    }
  }
</style>

{% schema %}
{
  "name": "Image banner",
  "presets": [
    {
      "name": "Image banner"
    }
  ],
   "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Upload Image"
    }
  ],
}
  
{% endschema %}