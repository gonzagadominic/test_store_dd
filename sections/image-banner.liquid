<section class="banner-section" role="banner">
  <div class="banner-container">
    {%- if section.settings.banner_image != blank -%}
      {{ section.settings.banner_image | img_url: 'master' | img_tag: 
        section.settings.banner_image.alt,
        'banner-bg',
        loading: 'eager'
      }}
    {%- endif -%}
    
    <div class="banner-content">
      <div class="banner-text-wrapper">
        {%- if section.settings.tagline != blank -%}
          <p class="banner-tagline">{{ section.settings.tagline }}</p>
        {%- endif -%}
        
        {%- if section.settings.heading != blank -%}
          <h1 class="banner-heading">{{ section.settings.heading }}</h1>
        {%- endif -%}
        
        {%- if section.settings.cta_link != blank and section.settings.cta_text != blank -%}
          <a href="{{ section.settings.cta_link }}" class="cta-button">
            {{ section.settings.cta_text }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Shopify eCommerce experts."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "We design, build and optimize exceptional eCommerce websites."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "START YOUR PROJECT"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    }
  ],
  "presets": [
    {
      "name": "Image Banner"
    }
  ]
}
{% endschema %}