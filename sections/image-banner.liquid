<div class="hero-container" role="banner" aria-label="Hero section">


  <div class="content-wrapper">
    <div class="content-inner">
      <div class="highlight-text" aria-label="Company expertise">
        Shopify eCommerce experts.
      </div>
      <h1 class="main-heading">
        We design, build and
        <br />
        optimise exceptional
        <br />
        eCommerce websites.
      </h1>
      <button 
        class="cta-button" 
        aria-label="Start your project" 
        tabindex="0"
      >
        Start your project
      </button>
    </div>
  </div>
</div>

<style>
 .hero-section {
    width: 100%;
    text-transform: uppercase;
    font: 700 14px Montserrat, sans-serif;
  }

  .hero-container {
    display: flex;
    flex-direction: column;
    position: relative;
    min-height: 471px;
    width: 100%;
    align-items: start;
    padding: 221px 80px 34px;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-content {
    position: relative;
    display: flex;
    width: 352px;
    max-width: 100%;
    flex-direction: column;
    justify-content: center;
    padding: 10px;
  }

  .hero-text-wrapper {
    display: flex;
    width: 100%;
    max-width: 332px;
    flex-direction: column;
  }

  .hero-tagline {
    color: var(--Bright-Green, #2bd896);
    letter-spacing: 1.4px;
  }

  .hero-heading {
    color: #fff;
    margin-top: 8px;
    font: 28px Poppins, sans-serif;
  }

  .cta-button {
    border-radius: 5px;
    background-color: #c6474b;
    margin-top: 8px;
    width: 236px;
    color: #fff;
    padding: 10px;
  }
</style>

{% schema %}
{
  "name": "Image banner",
  "presets": [
    {
      "name": "Image banner"
    }
  ],
   "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Upload Image"
    }
  ],
}
  
{% endschema %}