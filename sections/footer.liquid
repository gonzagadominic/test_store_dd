 <footer class="footer-section">
    <div class="footer-wrapper">
      <div class="footer-content">
        <div class="footer-info">
          <h3 class="footer-contact">CONTACT US</h3>
          <a href="mailto:hello@shopify.com" class="footer-email">{{ section.settings.contact_email }}</a>
          <p class="footer-copyright">{{ section.settings.copyright_text }}</p>
        </div>
        <nav class="footer-links">
          <a href="#privacy">Privacy Policy</a>
          <a href="#terms">Terms and Conditions</a>
          <a href="#returns">Returns</a>
        </nav>
      </div>
    </div>
  </footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "contact_email",
      "label": "Contact Email",
      "default": "hello@shopify.com"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Copyright 2023 Drive Digital. All rights reserved."
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer Menu"
    }
  ]
}
{% endschema %}